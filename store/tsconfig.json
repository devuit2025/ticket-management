{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@screens/*": ["src/screens/*"],
            "@config/*": ["src/config/*"],
            "@context/*": ["src/context/*"],
            "@hooks/*": ["src/hooks/*"],
            "@navigation/*": ["src/navigation/*"],
            "@validations/*": ["src/validations/*"],
            "@assets/*": ["/assets/*"],
            "@i18n/*": ["src/i18n/*"],
            "@types/*": ["src/types/*"],
            "@store/*": ["src/store/*"],
            "@theme/*": ["src/theme/*"],
            "@utils/*": ["src/utils/*"],
            "@api/*": ["src/api/*"],
            "@components/*": ["src/components/*"]
        }
    }
}
