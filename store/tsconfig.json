{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@screens/*": ["src/screens/*"],
            "@config/*": ["src/config/*"],
            "@context/*": ["src/context/*"],
            "@hooks/*": ["src/hooks/*"],
            "@navigation/*": ["src/navigation/*"],
            "@store/*": ["src/store/*"],
            "@theme/*": ["src/theme/*"],
            "@utils/*": ["src/utils/*"]
        }
    }
}
